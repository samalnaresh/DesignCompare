    <script>
        // Mobile menu toggle
        const hamburger = document.querySelector('.hamburger');
        const navLinks = document.querySelector('.nav-links');
        
        hamburger.addEventListener('click', () => {
            navLinks.classList.toggle('active');
            hamburger.innerHTML = navLinks.classList.contains('active') 
                ? '<i class="fas fa-times"></i>' 
                : '<i class="fas fa-bars"></i>';
        });
        
        // Close menu when clicking a link
        document.querySelectorAll('.nav-links a').forEach(link => {
            link.addEventListener('click', () => {
                navLinks.classList.remove('active');
                hamburger.innerHTML = '<i class="fas fa-bars"></i>';
            });
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Add intersection observer for animations
        const animateElements = document.querySelectorAll('.animate');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, { threshold: 0.1 });
        
        animateElements.forEach(element => {
            element.style.opacity = 0;
            element.style.transform = 'translateY(20px)';
            element.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(element);
        });

        // Highlight Indian pricing on page load
        document.addEventListener('DOMContentLoaded', function() {
            const indianPrices = document.querySelectorAll('.price-conversion');
            indianPrices.forEach(price => {
                price.style.fontWeight = '600';
                price.style.color = 'var(--primary-dark)';
            });
        });

        // Language Toggle
        const languageBtn = document.getElementById('languageBtn');
        const languageOptions = document.getElementById('languageOptions');
        
        languageBtn.addEventListener('click', () => {
            languageOptions.classList.toggle('show');
        });
        
        document.querySelectorAll('.language-option').forEach(option => {
            option.addEventListener('click', function() {
                const lang = this.getAttribute('data-lang');
                // In a real implementation, you would load translations here
                alert(`Language switched to ${this.textContent}. Actual translation would be implemented with i18n.`);
                languageOptions.classList.remove('show');
            });
        });

        // FAQ Toggle
        document.querySelectorAll('.faq-question').forEach(question => {
            question.addEventListener('click', function() {
                const answer = this.nextElementSibling;
                const toggle = this.querySelector('.faq-toggle');
                
                answer.classList.toggle('show');
                toggle.classList.toggle('active');
            });
        });

        // Pricing Calculator
        const calculateBtn = document.getElementById('calculateBtn');
        const calculatorResult = document.getElementById('calculatorResult');
        
        calculateBtn.addEventListener('click', function() {
            const tool = document.getElementById('toolSelect').value;
            const teamSize = parseInt(document.getElementById('teamSize').value);
            const billingPeriod = document.getElementById('billingPeriod').value;
            
            let price = 0;
            let note = "Prices include GST";
            
            if (tool === 'canva') {
                if (billingPeriod === 'annual') {
                    price = 6999 * teamSize;
                    note = "₹6,999 per user/year (includes GST)";
                } else {
                    price = 699 * teamSize;
                    note = "₹699 per user/month (includes GST)";
                }
            } else {
                if (billingPeriod === 'annual') {
                    price = 399 * 12 * teamSize * 0.8; // 20% discount
                    note = "₹399 per user/month with 20% annual discount (includes GST)";
                } else {
                    price = 399 * teamSize;
                    note = "₹399 per user/month (includes GST)";
                }
            }
            
            document.getElementById('calculatedPrice').textContent = `₹${price.toLocaleString('en-IN')}`;
            document.getElementById('priceNote').textContent = note;
            calculatorResult.classList.add('show');
        });

        // Exchange Rate Fetcher (simplified example)
        async function fetchExchangeRates() {
            try {
                // In a real implementation, you would call an exchange rate API
                // This is a mock implementation
                const response = await fetch('https://api.exchangerate-api.com/v4/latest/USD');
                const data = await response.json();
                const inrRate = data.rates.INR || 83.5; // Fallback rate
                
                // Update USD to INR conversions on the page
                document.querySelectorAll('.usd-price').forEach(element => {
                    const usd = parseFloat(element.getAttribute('data-usd'));
                    element.textContent = `≈ ₹${Math.round(usd * inrRate)}`;
                });
            } catch (error) {
                console.error("Error fetching exchange rates:", error);
                // Fallback to hardcoded rate
                document.querySelectorAll('.usd-price').forEach(element => {
                    const usd = parseFloat(element.getAttribute('data-usd'));
                    element.textContent = `≈ ₹${Math.round(usd * 83.5)}`;
                });
            }
        }
        
        // Call the exchange rate function on page load
        document.addEventListener('DOMContentLoaded', fetchExchangeRates);

        // AdSense loading optimization
        document.addEventListener('DOMContentLoaded', function() {
            // Load ads after page content
            setTimeout(function() {
                const ads = document.querySelectorAll('.adsbygoogle');
                ads.forEach(ad => {
                    (adsbygoogle = window.adsbygoogle || []).push({});
                });
            }, 1000);
        });
    </script>
